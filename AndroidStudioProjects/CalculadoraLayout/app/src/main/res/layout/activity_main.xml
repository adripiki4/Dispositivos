<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtprincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:height="100dp"
        android:textAlignment="textEnd"
        android:textColor="#050303"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />



    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="5">
        <Button
            android:id="@+id/numero_7"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_column="0"
            android:layout_row="0"
            android:text="7" />

        <Button
            android:id="@+id/numero_8"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="8" />

        <Button
            android:id="@+id/numero_9"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="9" />

        <Button
            android:id="@+id/numero_4"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/numero_5"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/numero_6"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/signo_por"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:layout_column="3"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:gravity="center"
            android:text="ร" />

        <Button
            android:id="@+id/signo_divide"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:text="รท" />

        <Button
            android:id="@+id/numero_1"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1" />

        <Button
            android:id="@+id/numero_2"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2" />

        <Button
            android:id="@+id/numero_3"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="3" />

        <Button
            android:id="@+id/signo_menos"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:gravity="center"
            android:text="-" />

        <Button
            android:id="@+id/punto"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="fill_horizontal"
            android:gravity="center_horizontal"
            android:text="." />

        <Button
            android:id="@+id/numero_cero"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_column="1"
            android:layout_row="3"
            android:text="0" />

        <Button
            android:id="@+id/signo_igual"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="=" />

        <Button
            android:id="@+id/signo_mas"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:text="+" />

        <Button
            android:id="@+id/signo_borra"
            style="@style/AppTheme.BotonCalculadora.C"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:text="C" />


    </GridLayout>

</RelativeLayout>
